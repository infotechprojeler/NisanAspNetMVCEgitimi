@model Urun

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Silmek istiyor musunuz?</h3>
<div>
    <h4>Ürün Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resmi)
        </dt>
        <dd class = "col-sm-10">
            <img src="/images/@Model.Resmi" alt="" height="99" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fiyati)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fiyati)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stok)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stok)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>
