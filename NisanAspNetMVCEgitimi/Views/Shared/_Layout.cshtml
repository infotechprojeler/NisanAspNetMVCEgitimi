<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NisanAspNetMVCEgitimi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NisanAspNetMVCEgitimi.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("OzelCss", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Index">
                    <img src="/images/logoInfotechAcademy.png" alt="" width="118" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Anasayfa" asp-action="Hakkimizda">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Anasayfa" asp-action="Ders12OrnekTasarim">Sayfa Tasarımı</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/Iletisim" class="nav-link text-dark">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC01RazorSyntax" asp-action="Index">RazorSyntax</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC02HtmlAndTagHelpers" asp-action="Index">HtmlAndTagHelpers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC03DataTransfer" asp-action="Index">DataTransfer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC04ModelBinding" asp-action="Index">ModelBinding</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC05ModelValidation" asp-action="Index">ModelValidation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC06CRUD" asp-action="Index">MVC CRUD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC07Section" asp-action="Index">Section</a>
                        </li>
                        <partial name="_PartialMenu" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NisanAspNetMVCEgitimi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        @await RenderSectionAsync("OzelIcerik", required: false)
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
